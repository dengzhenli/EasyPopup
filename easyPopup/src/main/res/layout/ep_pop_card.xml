<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ep_margin_middle"
        android:paddingVertical="@dimen/ep_margin_middle"
        android:paddingHorizontal="@dimen/ep_margin_normal"
        android:background="@drawable/ep_pop_shape_pop_bg"
        android:elevation="@dimen/ep_margin_middle"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/ep_margin_normal"
            android:layout_marginVertical="@dimen/ep_margin_middle">

            <ImageView
                android:id="@+id/ep_pop_card_back_iv"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ep_common_selector_btn_back" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ep_pop_card_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/ep_pop_card_min_height"
            android:orientation="vertical"
            android:padding="@dimen/ep_margin_normal" />


    </LinearLayout>

</LinearLayout>